<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Vendinha"
                   namespace="Vendinha.Entidades">

	<class name="Cliente" table="clientes">
		<id name="Codigo" type="int">
			<generator class="sequence" >
				<param name="sequence">clientes_seq</param>
			</generator>
		</id>
		<property name="Nome"				type="string"	length="50"		/>
		<property name="Email"				type="string"	length="50"		/>
		<property name="Cpf"				type="string"					/>
		<property name="DataNascimento"		type="Date"						/>

		<bag name="Dividas" lazy="false" generic="true" cascade="none">
			<key column="clientecodigo"></key>
			<one-to-many class="Divida"></one-to-many>
		</bag>

	</class>

</hibernate-mapping>
